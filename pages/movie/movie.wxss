/* pages/movie/movie.wxss */
.movie .swiper {
  height: 500rpx;
}

.movie .swiper .swiper-img {
  display: block;
  height: 500rpx;
  width: 100%;
}

.hot-movie {
  padding: 20px;
}

.hot-movie .title {
  font-size: 16px;
}

.movie-content {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.movie-content .movie-item{
  margin-top: 20rpx;
  width: 210rpx;
  height: 360rpx;
  font-size: 12px;
  text-align: center;
  color: #888;
}

.movie-item .movie-img {
  display: block;
  width: 100%;
  height: 260rpx;
}

.movie-item .movie-title {
  margin-top: 10rpx;
}