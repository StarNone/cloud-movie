/* pages/index/components/content-item.wxss */

.content-item {
  border-top: 1px solid #eee;
  margin-top: 20px;
}

.content-msg {
  display: flex;
  align-items: center;
  padding: 0 20px;
  margin-top: 10px;
}

.content-msg .author-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20px;
}

.content-msg .time {
  font-size: 14px;
  color: #888;
  line-height: 60rpx;
}

.content-item .title {
  display: block;
  font-size: 18px;
  font-weight: 400;
  color: #333;
  padding: 0 20px;
}

.content-item .main-img .img {
  margin-top: 10px;
  display: block;
  width: 100%;
  height: 600rpx;
  border-top: 1px solid #f1f1f1;
  border-bottom: 1px solid #f1f1f1;
}

.content-pre {
  color: #888;
  font-size: 13px;
  line-height: 1.5;
}